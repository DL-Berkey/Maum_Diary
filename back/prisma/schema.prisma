model Diary {
  id          Int      @id @unique @default(autoincrement())
  emotion     String   @default("thanks")
  title       String
  description String
  lock        Boolean  @default(false)
  likes       Int      @default(0)
  weather     String   @default("sunny")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author String
  user   User   @relation(fields: [author], references: [nickname])
}

model Token {
  id     Int    @id @unique @default(autoincrement())
  token  String @unique
  userID String @unique
}

model Chat {
  id            Int       @id @default(autoincrement())
  user_model_id String    @unique
  inviter       String
  invitee       String
  lastmessage   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  messege       Messege[]
  user          User[]

  // @@fulltext([user_model_id])
}

model Messege {
  id        Int      @id @default(autoincrement())
  chatRoom  String
  sender    String
  receiver  String
  msgText   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chat      Chat     @relation(fields: [chatRoom], references: [user_model_id])
}
